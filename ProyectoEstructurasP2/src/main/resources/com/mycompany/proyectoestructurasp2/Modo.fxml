                  <RadioButton fx:id="PlayerVsCPURadio" mnemonicParsing="false" onAction="#setPlayerVsCPURadio" text="Player vs CPU" />
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.rowIndex="2">
               <children>
                  <RadioButton fx:id="CPUVsCPURadio" mnemonicParsing="false" onAction="#setCPUVsCPURadio" text="CPU vs CPU" />
